<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools">
    <TextView
        android:id="@+id/badge"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/council_image"
        android:layout_alignRight="@+id/council_image"

        android:background="@drawable/circle_badge"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="16sp"

        android:text="8" />
    <de.hdodenhof.circleimageview.CircleImageView android:layout_width="80dp"
        android:layout_height="80dp"


        app:civ_border_color="@color/colorblack"

        android:id="@+id/council_image"
        />



</RelativeLayout>

