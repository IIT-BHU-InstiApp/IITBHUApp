<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DeveloperInfo">

    <include
        android:id="@+id/toolbar"
        layout="@layout/custom_toolbar_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

<androidx.cardview.widget.CardView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:id="@+id/cardview_visible"
    android:layout_gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="10dp"
            android:layout_margin="16dp"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_profile_picture_profile"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="14dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="12dp"
                android:layout_gravity="center_horizontal" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:id="@+id/user_name_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2sp"
                    android:textSize="19sp"
                    tools:text="Suryansh Singh Tomar"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/user_rollno_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2sp"
                    android:textSize="15sp"
                    tools:text="Mining Engineering"
                    android:gravity="center"
                    android:text="hello"/>

                <TextView
                    android:id="@+id/user_email_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2sp"
                    android:gravity="center"
                    tools:text="suryansh.stomar.min19@itbhu.ac.in"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/user_contact_no_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2sp"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>
</androidx.cardview.widget.CardView>

    <com.example.anant.iitbhuvaranasi.TouchImageView
        android:id="@+id/expanded_image_profile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="Zoomed Image"
        android:visibility="gone" />
</FrameLayout>
